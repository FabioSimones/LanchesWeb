@model IEnumerable<LanchesMac.Models.Categoria>

@{
    ViewData["Title"] = "Lista de categorias";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Adicionar nova categoria</a>
</p>
<hr />
<div class="row">
    <div class="col col-md-10">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoriaNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>

                            <a asp-action="Edit" asp-route-id="@item.CategoriaId" type="button" class="btn btn-primary">Editar</a>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.CategoriaId" type="button" class="btn btn-warning">Detalhes</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.CategoriaId" type="button" class="btn btn-danger">Excluir</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
